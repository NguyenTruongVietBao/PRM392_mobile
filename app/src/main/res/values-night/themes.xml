<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Dark mode -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue_light</item>
        <item name="colorPrimaryVariant">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/text_primary_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_orange_light</item>
        <item name="colorSecondaryVariant">@color/secondary_orange</item>
        <item name="colorOnSecondary">@color/text_primary_dark</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Card styling -->
        <item name="cardViewStyle">@style/CardView.Dark</item>

        <!-- Button styling -->
        <item name="materialButtonStyle">@style/Button.Primary.Dark</item>

        <!-- Elevation -->
        <item name="elevation">8dp</item>

        <!-- Ripple effect -->
        <item name="android:colorControlHighlight">@color/primary_blue_light</item>

        <!-- Error color -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Custom Card Style for Dark mode -->
    <style name="CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardElevation">6dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="strokeColor">@color/divider_dark</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Custom Button Style for Dark mode -->
    <style name="Button.Primary.Dark" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_blue_light</item>
        <item name="android:textColor">@color/background_dark</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom Toolbar Style for Dark mode -->
    <style name="Toolbar.Dark" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/surface_dark</item>
        <item name="titleTextColor">@color/text_primary_dark</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Bottom Navigation Style for Dark mode -->
    <style name="BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/surface_dark</item>
        <item name="itemIconTint">@color/primary_blue_light</item>
        <item name="itemTextColor">@color/text_primary_dark</item>
    </style>
</resources>